.span12
  .well
    %h1 Listing customers

    %table.table-bordered
      %thead{:align => "center"}
        %tr{:align => "center"}
          %th{:align => "center"} First name
          %th{:align => "center"} Middle name
          %th{:align => "center"} Last name
          %th{:align => "center"} Company
          %th{:align => "center"} Ci
          %th{:align => "center"} Date of birth
          %th{:align => "center"} Gender
          %th{:align => "center"} Address
          %th{:align => "center"} City
          %th{:align => "center"} Phone
          %th{:align => "center"} Cell phone
          %th{:align => "center"} User
          %th{:colspan => "3",:align => "center"} OPTIONS


      - @customers.each do |customer|
        %tbody
          %tr
            %td= customer.first_name
            %td= customer.middle_name
            %td= customer.last_name
            %td= customer.company
            %td= customer.ci
            %td= customer.date_of_birth
            %td= customer.gender
            %td= customer.address
            %td= customer.city
            %td= customer.phone
            %td= customer.cell_phone
            %td= customer.user_id
            %td= link_to 'Show', customer
            %td= link_to 'Edit', edit_customer_path(customer)
            %td= link_to 'Destroy', customer, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

  = link_to 'New Customer', new_customer_path
