- model_class = Record
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @record.name
%p
  %strong= model_class.human_attribute_name(:record) + ':'
  %br
  = @record.record
%p
  %strong= model_class.human_attribute_name(:request_id) + ':'
  %br
  = @record.request_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), records_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_record_path(@record), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), record_path(@record), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
